{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "Taxi App - Display users' location"
  },
  "servers": [
    {
      "url": "https://secret-mesa-70576.herokuapp.com/"
    }
  ],
  "paths": {
    "/": {
      "get": {
        "summary": "Homepage shows the location of the users waiting for taxis",
        "tags": ["root"],
        "responses": {
          "200": {
            "description": "Displays users' location",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "example": {
                    
                      "username": "user01",
                      "location": {
                      "lng": "103.7487",
                      "lat": "1.3694"
                      
                      }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/login": {
      "post": {
        "summary": "Log in page for user or admin",
        "tags": ["root"],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "description": "The username and the password of the user/admin",
            "schema": {
              "example": {
                "username": "user01",
                "passsword": "password01"
              },
              "type": "JSON"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Null response"
          },
          "401": {
            "description": "Password does not match"
          }
        }
      }
    },
    "/signup": {
      "post": {
        "summary": "Add a user",
        "tags": ["users"],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "description": "The username and the password of the user. Usernames must be unique and cannot be blank",
            "schema": {
              "example": {
                "username": "user01",
                "passsword": "password01"
              },
              "type": "JSON"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Null response"
          },
          "500": {
            "description": "'User validation failed: username: should be unique' or 'User validation failed: username: cannot be blank'"
          }
        }
      }
    },
    "/:username": {
      "put": {
        "summary": "Change a user's username and/or password by an admin or the user",
        "tags": ["users"],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "description": "Change username and the password of the user.",
            "schema": {
              "example": {
                "username": "newUser01",
                "passsword": "new_password01"
              },
              "type": "JSON"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Null response"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "user01 is not found."
          }
        }
      }
    },
    "/resource11": {
      "get": {
        "summary": "List all resource1",
        "tags": ["resource1"],
        "responses": {
          "200": {
            "description": "An array of blog posts",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "example": {
                      "id": 5,
                      "name": "hello",
                      "flavour": "margarita"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create a resource",
        "tags": ["resource1"],
        "responses": {
          "201": {
            "description": "Null response"
          },
          "400": {
            "description": "Bad request"
          }
        }
      }
    },
    "/resource1/{id}": {
      "get": {
        "summary": "Info for a specific resource",
        "tags": ["resource1"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "The id of the resource to retrieve",
            "schema": {
              "type": "number"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Expected response to a valid request",
            "content": {
              "application/json": {
                "schema": {
                  "example": {
                    "id": 5,
                    "name": "something"
                  }
                }
              }
            }
          }
        }
      },
      "put": {
        "summary": "Update a specific item",
        "tags": ["resource1"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "The id of the resource to update",
            "schema": {
              "type": "number"
            }
          }
        ],
        "requestBody": {
          "description": "Updated fields for resource",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "example": {
                  "id": 2,
                  "name": "something"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Expected response to a valid request",
            "content": {
              "application/json": {
                "schema": {
                  "example": {
                    "id": 5,
                    "name": "updated name"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/resource2": {
      "get": {
        "summary": "List all resource1",
        "tags": ["resource2"],
        "responses": {
          "200": {
            "description": "List of resource objects",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "example": {
                      "id": 6,
                      "special": "a different kind of resource"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
